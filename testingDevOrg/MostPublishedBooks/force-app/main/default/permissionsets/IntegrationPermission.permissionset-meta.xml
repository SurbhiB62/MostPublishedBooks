<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>This is to provide the access to the external credentials</description>
    <externalCredentialPrincipalAccesses>
        <enabled>true</enabled>
        <externalCredentialPrincipal>PublishedBooksCredential-Integration</externalCredentialPrincipal>
    </externalCredentialPrincipalAccesses>
    <hasActivationRequired>true</hasActivationRequired>
    <label>IntegrationPermission</label>
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>UserExternalCredential</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
</PermissionSet>
